#include<stdio.h>
int main()
{
	int i,M,N,size;
	printf("enter the size of array:");
	scanf("%d",&size);
	
	int a[size];
	printf("enter the array of elements:");
	for(i=0;i<size;i++)
	{
		scanf("%d",&a[i]);
	}
	printf("enter the M for M-th maximum:");
	scanf("%d",&M);
	printf("enter the N for N-th minimum:");
	scanf("%d",&N);
	// find the M-th maximum using simple linear search
	
	int maxM =a[0];
	for(i=0;i<size;i++)
	{
		if(a[i]>maxM)
		{
			maxM =a[i];
		}
	}
	
	 
	// finding the N-th maximum using simple linear search
	int minN =a[0];
	for(i=0;i<size;i++)
	{
		if(a[i]<minN)
		{
			minN = a[i];
		}
	}	
	
	printf("M-th maximum number:%d\n",maxM);
	printf("N-th minimum number:%d\n",minN);
	
	int sum=maxM+minN;
	int diff=maxM-minN;
	
	printf("sum=%d\n",sum);
	printf("difference=%d\n",diff);
	
	return 0;
	
	
	
}
